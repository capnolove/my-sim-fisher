generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  username  String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  employees Employee[]
}

model Employee {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String
  department String?
  adminId    String
  admin      User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([adminId])
}

model PhishingLog {
  id         String   @id @default(cuid())
  campaignId String
  employeeId String
  platform   String
  action     String   // "sent" | "clicked" | "submitted"
  timestamp  DateTime @default(now())
  data       Json?
  createdAt  DateTime @default(now())

  @@index([campaignId])
  @@index([employeeId])
}